<Window x:Class="XasLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XasLauncher" Height="600" Width="950"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"
        Background="Transparent" MouseLeftButtonDown="Window_MouseDown"
        FontFamily="Inter, Segoe UI">

    <Window.Resources>
        <Style x:Key="MenuBtnStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#777"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle x:Name="Indi" Fill="#7c3aed" RadiusX="3" RadiusY="3" Visibility="Collapsed" Margin="0,10"/>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="18,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="bdr" Property="Background" Value="#1e1e1e"/>
                                <Setter TargetName="Indi" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#09090b" BorderBrush="#1f1f22" BorderThickness="1.5">
        <Grid>
            <Border CornerRadius="15" Opacity="0.15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7c3aed" Offset="0"/>
                        <GradientStop Color="#000000" Offset="0.5"/>
                        <GradientStop Color="#2e1065" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#0c0c0e" Padding="25">
                    <StackPanel>
                        <TextBlock Text="XAS" Foreground="White" FontSize="52" FontWeight="Black">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#8b5cf6" BlurRadius="25" ShadowDepth="0" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="LAUNCHER" Foreground="#8b5cf6" FontSize="14" FontWeight="Bold" Margin="4,-8,0,60" Opacity="0.9">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#8b5cf6" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <RadioButton Content="ANA SAYFA" Tag="Home" Click="Nav_Click" IsChecked="True" Style="{StaticResource MenuBtnStyle}"/>
                        <RadioButton Content="AYARLAR" Tag="Settings" Click="Nav_Click" Style="{StaticResource MenuBtnStyle}"/>

                        <TextBlock Text="v1.0.0 Fixed" VerticalAlignment="Bottom" Foreground="DarkTurquoise" FontSize="11" Margin="10,240,0,0"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" Margin="45">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="10">
                        <Button Content="‒" Click="BtnMinimize_Click" Width="35" Height="35" Background="Transparent" Foreground="#666" BorderThickness="0" FontSize="24"/>
                        <Button Content="✕" Click="BtnClose_Click" Width="35" Height="35" Background="Transparent" Foreground="#666" BorderThickness="0" FontSize="16"/>
                    </StackPanel>

                    <Grid x:Name="ViewHome" Visibility="Visible">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Oyuna Başla" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,0,0,35"/>

                            <TextBlock Text="KULLANICI ADI" Foreground="#666" FontSize="12" FontWeight="Bold" Margin="2,0,0,10"/>
                            <Border Background="#1e1e1e" CornerRadius="8" Height="50" BorderBrush="#333" BorderThickness="1" Margin="0,0,0,25">
                                <TextBox x:Name="txtUsername" Text="Player" Background="Transparent" Foreground="White" BorderThickness="0" VerticalContentAlignment="Center" Padding="15,0" FontSize="16" CaretBrush="#8b5cf6"/>
                            </Border>

                            <TextBlock Text="SÜRÜM SEÇİMİ" Foreground="#666" FontSize="12" FontWeight="Bold" Margin="2,0,0,10"/>
                            <Border Background="#1e1e1e" CornerRadius="8" Height="50" BorderBrush="#333" BorderThickness="1" Margin="0,0,0,25">
                                <ComboBox x:Name="comboVersions" IsEditable="False" Background="Transparent" Foreground="Black" BorderThickness="0" VerticalContentAlignment="Center" Padding="15,0" Height="50" FontSize="16"/>
                            </Border>

                            <TextBlock Text="YÜKLEYİCİ" Foreground="#666" FontSize="12" FontWeight="Bold" Margin="2,0,0,10"/>
                            <Border Background="#1e1e1e" CornerRadius="8" Height="50" BorderBrush="#333" BorderThickness="1" Margin="0,0,0,40">
                                <ComboBox x:Name="comboLoader" Background="Transparent" Foreground="Black" SelectedIndex="0" BorderThickness="0" VerticalContentAlignment="Center" Padding="15,0" Height="50" FontSize="16">
                                    <ComboBoxItem Content="Normal (Vanilla)"/>
                                    <ComboBoxItem Content="Forge (Otomatik)"/>
                                    <ComboBoxItem Content="NeoForge (Otomatik)"/>
                                </ComboBox>
                            </Border>

                            <Button x:Name="btnLaunch" Content="OYUNU BAŞLAT" Click="BtnLaunch_Click" Height="60" Foreground="White" FontWeight="Bold" FontSize="18" Background="#7c3aed" BorderThickness="0" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="bdr" CornerRadius="10" Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bdr" Property="Background" Value="#6d28d9"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <TextBlock x:Name="lblStatus" Text="Sistem Hazır." Foreground="#555" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="ViewSettings" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Ayarlar" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,0,0,35"/>
                            <Border Background="#121212" CornerRadius="10" Padding="25" BorderBrush="#222" BorderThickness="1" Margin="0,0,0,25">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                        <TextBlock Text="Bellek (RAM) Ataması" Foreground="#aaa" FontSize="14" FontWeight="Bold"/>
                                        <TextBlock x:Name="lblRam" Text="4096 MB" Foreground="#8b5cf6" FontSize="14" FontWeight="Bold" Margin="12,0,0,0"/>
                                    </StackPanel>
                                    <Slider x:Name="sliderRam" Minimum="1024" Maximum="16384" Value="4096" TickFrequency="1024" IsSnapToTickEnabled="True" ValueChanged="sliderRam_ValueChanged"/>
                                </StackPanel>
                            </Border>
                            <Button Content="📂 Mod Klasörünü Aç" Click="BtnOpenMods_Click" Height="50" Background="#1e1e1e" Foreground="White" BorderThickness="1" BorderBrush="#333" FontSize="14" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>